{
    "apiVersion": "v1",
    "items": [
        {
            "apiVersion": "v1",
            "kind": "Namespace",
            "metadata": {
                "labels": {
                    "name": "hub"
                },
                "name": "hub"
            }
        },
        {
            "apiVersion": "networking.k8s.io/v1beta1",
            "kind": "Ingress",
            "metadata": {
                "name": "hub",
                "namespace": "hub"
            },
            "spec": {
                "rules": [
                    {
                        "host": "hub.local",
                        "http": {
                            "paths": [
                                {
                                    "backend": {
                                        "serviceName": "hub",
                                        "servicePort": 80
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "hub-db",
                "namespace": "hub"
            },
            "spec": {
                "ports": [
                    {
                        "port": 5432,
                        "protocol": "TCP"
                    }
                ],
                "selector": {
                    "service": "hub-db"
                }
            }
        },
        {
            "apiVersion": "apps/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "hub-db",
                "namespace": "hub"
            },
            "spec": {
                "replicas": 1,
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "PGDATA",
                                        "value": "/var/lib/postgresql/data/pgdata"
                                    },
                                    {
                                        "name": "POSTGRES_DB",
                                        "value": "hub"
                                    },
                                    {
                                        "name": "POSTGRES_PASSWORD_FILE",
                                        "value": "/secrets/HUB/db_password"
                                    },
                                    {
                                        "name": "POSTGRES_USER_FILE",
                                        "value": "/secrets/HUB/db_username"
                                    }
                                ],
                                "image": "postgres:11.5",
                                "imagePullPolicy": "Always",
                                "name": "postgres",
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": true
                                    }
                                ]
                            }
                        ],
                        "initContainers": [
                            {
                                "image": "busybox",
                                "imagePullPolicy": "Always",
                                "name": "postgres",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/data",
                                        "name": "db",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": true
                                    }
                                ]
                            },
                            {
                                "env": [
                                    {
                                        "name": "ONLY_RUN_ONCE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "RECURSE_SECRETS",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SECRET_HUB",
                                        "value": "/hub"
                                    },
                                    {
                                        "name": "VAULT_ADDR",
                                        "value": "http://vault.local"
                                    },
                                    {
                                        "name": "VAULT_ROLE",
                                        "value": "hub"
                                    }
                                ],
                                "image": "arecker/secretboi:latest",
                                "imagePullPolicy": "Always",
                                "name": "secretboi",
                                "volumeMounts": {
                                    "mountPath": "/secrets",
                                    "name": "secrets",
                                    "readOnly": false
                                }
                            }
                        ],
                        "securityContext": {
                            "runAsGroup": 1000,
                            "runAsUser": 1000
                        },
                        "volumes": [
                            {
                                "emptyDir": {
                                    "medium": "Memory"
                                },
                                "name": "secrets"
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "hub-web",
                "namespace": "hub"
            },
            "spec": {
                "ports": [
                    {
                        "port": 8000,
                        "protocol": "TCP"
                    }
                ],
                "selector": {
                    "service": "hub-web"
                }
            }
        },
        {
            "apiVersion": "apps/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "hub-web",
                "namespace": "hub"
            },
            "spec": {
                "replicas": 2,
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "DEBUG",
                                        "value": "false"
                                    },
                                    {
                                        "name": "DJANGO_SETTINGS_MODULE",
                                        "value": "hub.settings.prod"
                                    }
                                ],
                                "image": "arecker/hub-web:latest",
                                "imagePullPolicy": "Always",
                                "name": "web",
                                "ports": [
                                    {
                                        "containerPort": 8000,
                                        "protocol": "TCP"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/media",
                                        "name": "media",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": true
                                    }
                                ]
                            }
                        ],
                        "initContainers": [
                            {
                                "env": [
                                    {
                                        "name": "ONLY_RUN_ONCE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "RECURSE_SECRETS",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SECRET_HUB",
                                        "value": "/hub"
                                    },
                                    {
                                        "name": "VAULT_ADDR",
                                        "value": "http://vault.local"
                                    },
                                    {
                                        "name": "VAULT_ROLE",
                                        "value": "hub"
                                    }
                                ],
                                "image": "arecker/secretboi:latest",
                                "imagePullPolicy": "Always",
                                "name": "secretboi",
                                "volumeMounts": {
                                    "mountPath": "/secrets",
                                    "name": "secrets",
                                    "readOnly": false
                                }
                            }
                        ],
                        "securityContext": {
                            "runAsGroup": 1001,
                            "runAsUser": 1001
                        },
                        "volumes": [
                            {
                                "name": "media",
                                "nfs": {
                                    "path": "/mnt/scratch/farm/hub/media",
                                    "server": "archive.local"
                                }
                            },
                            {
                                "emptyDir": {
                                    "medium": "Memory"
                                },
                                "name": "secrets"
                            }
                        ]
                    }
                }
            }
        }
    ],
    "kind": "List"
}
