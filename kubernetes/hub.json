{
    "apiVersion": "v1",
    "items": [
        {
            "apiVersion": "v1",
            "kind": "Namespace",
            "metadata": {
                "labels": {
                    "name": "hub"
                },
                "name": "hub"
            }
        },
        {
            "apiVersion": "networking.k8s.io/v1beta1",
            "kind": "Ingress",
            "metadata": {
                "name": "hub",
                "namespace": "hub"
            },
            "spec": {
                "rules": [
                    {
                        "host": "hub.local",
                        "http": {
                            "paths": [
                                {
                                    "backend": {
                                        "serviceName": "hub-proxy",
                                        "servicePort": 80
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "hub-db",
                "namespace": "hub"
            },
            "spec": {
                "ports": [
                    {
                        "port": 5432,
                        "protocol": "TCP"
                    }
                ],
                "selector": {
                    "service": "hub-db"
                }
            }
        },
        {
            "apiVersion": "apps/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "hub-db",
                "namespace": "hub"
            },
            "spec": {
                "replicas": 1,
                "template": {
                    "metadata": {
                        "labels": {
                            "service": "hub-db"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "PGDATA",
                                        "value": "/var/lib/postgresql/data/pgdata"
                                    },
                                    {
                                        "name": "POSTGRES_DB",
                                        "value": "hub"
                                    },
                                    {
                                        "name": "POSTGRES_PASSWORD_FILE",
                                        "value": "/secrets/HUB/db_password"
                                    },
                                    {
                                        "name": "POSTGRES_USER_FILE",
                                        "value": "/secrets/HUB/db_username"
                                    }
                                ],
                                "image": "postgres:11.5",
                                "imagePullPolicy": "Always",
                                "name": "postgres",
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/postgresql/data",
                                        "name": "db",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": true
                                    }
                                ]
                            }
                        ],
                        "initContainers": [
                            {
                                "command": [
                                    "/bin/chmod",
                                    "-R",
                                    "777",
                                    "/data"
                                ],
                                "image": "busybox",
                                "imagePullPolicy": "Always",
                                "name": "permissions",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/data",
                                        "name": "db",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": true
                                    }
                                ]
                            },
                            {
                                "env": [
                                    {
                                        "name": "ONLY_RUN_ONCE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "RECURSE_SECRETS",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SECRET_HUB",
                                        "value": "/hub"
                                    },
                                    {
                                        "name": "VAULT_ADDR",
                                        "value": "http://vault.local"
                                    },
                                    {
                                        "name": "VAULT_ROLE",
                                        "value": "hub"
                                    }
                                ],
                                "image": "arecker/secretboi:latest",
                                "imagePullPolicy": "Always",
                                "name": "secretboi",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": false
                                    }
                                ]
                            }
                        ],
                        "securityContext": {
                            "runAsGroup": 1000,
                            "runAsUser": 1000
                        },
                        "volumes": [
                            {
                                "name": "db",
                                "nfs": {
                                    "path": "/mnt/scratch/hub",
                                    "server": "archive.local"
                                }
                            },
                            {
                                "emptyDir": {
                                    "medium": "Memory"
                                },
                                "name": "secrets"
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "hub-web",
                "namespace": "hub"
            },
            "spec": {
                "ports": [
                    {
                        "port": 8000,
                        "protocol": "TCP"
                    }
                ],
                "selector": {
                    "service": "hub-web"
                }
            }
        },
        {
            "apiVersion": "apps/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "hub-web",
                "namespace": "hub"
            },
            "spec": {
                "replicas": 2,
                "template": {
                    "metadata": {
                        "labels": {
                            "service": "hub-web"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "args": [
                                    "web"
                                ],
                                "command": [
                                    "./entry.sh"
                                ],
                                "env": [
                                    {
                                        "name": "DB_HOST",
                                        "value": "hub-db.hub.svc.cluster.local"
                                    },
                                    {
                                        "name": "DEBUG",
                                        "value": "false"
                                    },
                                    {
                                        "name": "DJANGO_SETTINGS_MODULE",
                                        "value": "hub.settings.prod"
                                    }
                                ],
                                "image": "arecker/hub-web:latest",
                                "imagePullPolicy": "Always",
                                "name": "web",
                                "ports": [
                                    {
                                        "containerPort": 8000,
                                        "protocol": "TCP"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/media",
                                        "name": "media",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": true
                                    }
                                ]
                            }
                        ],
                        "initContainers": [
                            {
                                "env": [
                                    {
                                        "name": "ONLY_RUN_ONCE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "RECURSE_SECRETS",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SECRET_HUB",
                                        "value": "/hub"
                                    },
                                    {
                                        "name": "VAULT_ADDR",
                                        "value": "http://vault.local"
                                    },
                                    {
                                        "name": "VAULT_ROLE",
                                        "value": "hub"
                                    }
                                ],
                                "image": "arecker/secretboi:latest",
                                "imagePullPolicy": "Always",
                                "name": "secretboi",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/secrets",
                                        "name": "secrets",
                                        "readOnly": false
                                    }
                                ]
                            }
                        ],
                        "securityContext": {
                            "runAsGroup": 1001,
                            "runAsUser": 1001
                        },
                        "volumes": [
                            {
                                "name": "media",
                                "nfs": {
                                    "path": "/mnt/scratch/farm/hub/media",
                                    "server": "archive.local"
                                }
                            },
                            {
                                "emptyDir": {
                                    "medium": "Memory"
                                },
                                "name": "secrets"
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "hub-proxy",
                "namespace": "hub"
            },
            "spec": {
                "ports": [
                    {
                        "port": 80,
                        "protocol": "TCP"
                    }
                ],
                "selector": {
                    "service": "hub-proxy"
                }
            }
        },
        {
            "apiVersion": "apps/v1beta1",
            "kind": "Deployment",
            "metadata": {
                "name": "hub-proxy",
                "namespace": "hub"
            },
            "spec": {
                "replicas": 2,
                "template": {
                    "metadata": {
                        "labels": {
                            "service": "hub-proxy"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "UPSTREAM_DNS",
                                        "value": "hub-web.hub.svc.cluster.local"
                                    },
                                    {
                                        "name": "UPSTREAM_HOSTNAME",
                                        "value": "hub.local"
                                    }
                                ],
                                "image": "arecker/hub-proxy:latest",
                                "imagePullPolicy": "Always",
                                "name": "proxy",
                                "ports": [
                                    {
                                        "containerPort": 80,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 443,
                                        "protocol": "TCP"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/usr/share/nginx/html/media/",
                                        "name": "media",
                                        "readOnly": true
                                    }
                                ]
                            }
                        ],
                        "initContainers": [

                        ],
                        "volumes": [
                            {
                                "name": "media",
                                "nfs": {
                                    "path": "/mnt/scratch/farm/hub/media",
                                    "server": "archive.local"
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "rbac.authorization.k8s.io/v1beta1",
            "kind": "ClusterRoleBinding",
            "metadata": {
                "name": "role-tokenreview-binding",
                "namespace": "hub"
            },
            "roleRef": {
                "apiGroup": "rbac.authorization.k8s.io",
                "kind": "ClusterRole",
                "name": "system:auth-delegator"
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "default",
                    "namespace": "hub"
                }
            ]
        }
    ],
    "kind": "List"
}
